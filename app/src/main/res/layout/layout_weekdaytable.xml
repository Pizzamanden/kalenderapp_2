<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:layout_marginBottom="2dp"
    android:background="#eee">


    <TextView
        android:id="@+id/textView_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="right|end"
        android:includeFontPadding="false"
        android:minWidth="40dp"
        android:padding="0dp"
        android:text="@string/dummyDate"
        android:textColor="@color/Font000"
        android:textSize="30sp"
        android:textStyle="bold"
        app:fontFamily="@font/roboto_thin" />

    <TextView
        android:id="@+id/textView_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:paddingBottom="0dp"
        android:minWidth="50dp"
        android:text="@string/day1s"
        android:textSize="22sp"
        app:fontFamily="@font/roboto_thin"
        android:layout_toRightOf="@+id/textView_date"
        android:layout_toEndOf="@+id/textView_date"
        android:layout_alignBottom="@+id/textView_date"
        />

    <TextView
        android:id="@+id/textView_plans"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"
        android:text="@string/dummyContent"
        android:textSize="15sp"
        app:fontFamily="@font/roboto_thin"
        android:layout_toEndOf="@+id/textView_day"
        android:layout_toRightOf="@+id/textView_day"
        android:layout_alignBottom="@+id/textView_date"
        />

</RelativeLayout>